<!-- views/updateRecord.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Update Record</title>
  <!-- Add Bootstrap CSS link -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-4">
    <h1>Update Record</h1>

    <form method="post" action="/records/<%= record.id %>/update"> <!-- Make sure the action is correct -->
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" name="name" id="name" value="<%= record.name %>" required class="form-control">
      </div>
      <div class="form-group">
        <label for="description">Description:</label>
        <textarea name="description" id="description" required class="form-control"><%= record.description %></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Update</button>
    </form>
  </div>

  <!-- Add Bootstrap JS and jQuery (for some Bootstrap features) -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
