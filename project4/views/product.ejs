<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Phone Store</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <div class="container-fluid mt-4">
    <h1 class="text-center mb-4">Phone Store</h1>

    <div class="row">
      <div class="col-lg-7 ">
        <div class="row">
          <% products.forEach(product =>{ %>
          <div class="col-md-4 col-sm-4">
            <div class="product-card">
              <img src="/images/<%= product.product_image %>" class="card-img-top" alt="Product image">
              <div class="card-body">
                <h5 class="card-title"><%= product.product_name %></h5>
                <h6 class="card-text"><b>$</b> <%= product.product_price %></h6>
                <form action="/add_cart" method="post">
                  <input type="hidden" name="product_id" value="<%= product.product_id %>"/>

                  <input type="hidden" name="product_name" value="<%= product.product_name %>" >

                  <input type="hidden" name="product_price" value="<%= product.product_price %>" >

                  <input type="submit" class="btn btn-warning btn-block" value="Add to Cart"/>

                </form>
              </div>
            </div>
          </div>
          <% })%>
        </div>
      </div>

      <div class="col-lg-5 mt-lg-0 mt-4" id="shopping-cart">
        <div class="card">
          <div class="card-header"><b>Shopping Cart</b></div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <th>Item Name</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total Price</th>
                    <th>Remove</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(cart.length>0)
                  {
                    let total = 0;
                    cart.forEach(item =>{
                  %>
                  <tr>
                    <td><%= item.product_name %></td>
                    <td><%= item.quantity %></td>
                    <td><%= item.product_price %></td>
                    <td><%= parseFloat(item.quantity) * parseFloat(item.product_price) %></td>
                    <td><button type="button" class="btn btn-danger btn-sm" onclick="remove_item('<%= item.product_id %>')">Remove</button></td>
                  </tr>
                  <%
                    total += parseFloat(item.quantity) * parseFloat(item.product_price)
                    })
                  %>
                  <tr>
                    <td colspan="3" align="right"><b>Total</b></td>
                    <td><%= total %></td>
                    <td>&nbsp;</td>
                  </tr>
                  <%
                  }
                  else
                  {
                  %>
                  <tr>
                    <td colspan="5" align="center">No Item Found in Cart</tr>
                  </tr>
                  <%
                  }
                  %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>

  <script>
    function remove_item(item_id){
      if(confirm("Are you sure you want to remove product from cart?")){
        window.location.href=`/remove_item?id=${item_id}`;
      }
    }
  </script>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>