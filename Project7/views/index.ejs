<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://bootswatch.com/5/flatly/bootstrap.min.css">
    <title>QR Code Generator</title>
</head>
<body>
    <div class="container-fluid d-flex justify-content-center align-items-center vh-100">
        <div class="jumbotron text-center">
            <h1 class="display-4">QR Code Generator</h1>
            <p class="lead">Generate your QR Code here!</p>
            <hr class="my-4">
            <form action="/scan" method="POST" class="form">
                <div class="form-group">
                    <textarea class="form-control" name="text" id="text" rows="6" placeholder="Enter URL or Text..." style="font-size: 15px;"></textarea>
                </div>
                <button type="submit" class="btn btn-primary" id="generateButton" style="font-size: 20px;">Generate QR Code</button>
            </form>
        </div>
    </div>

        <script>
            const updateButtonText = () => {
                const generateButton = document.getElementById('generateButton');
                generateButton.textContent = 'Generating...';
                generateButton.disabled = true;
            };

        </script>

    <!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

</body>
</html>