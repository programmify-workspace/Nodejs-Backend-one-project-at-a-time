<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,500;0,700;1,300;1,400;1,600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>
    <div class="header">
        <div class="logo-div">
            <a href="/"><img class="logo" src="logo.png" alt=""></a>
            <h1>Weather App</h1>
        </div>
        
        <form action="/" method="get" class="form" onsubmit="return validateForm()">
            <div class="form_div">
                <input name="city" type="text" class="textInput" value="<%= city %>" autocomplete="off" placeholder="Search...">
                <button class="submit-btn" type="submit"><i class="fa-solid fa-magnifying-glass search-icon"></i></button>
            </div>
        </form>  
    </div>
    
    <% if(typeof pageNotFound === "undefined" ) {%>
        <% if( typeof cod === "undefined" || cod === 200) {%>
            <div class="weather-div-div">
                <div class="weather-div" style="background: url('https://source.unsplash.com/1600x900/?<%= name%>'); background-blend-mode: darken; background-color: rgba(2, 14, 49, 0.705); background-size: cover;">
                
                    <div class="weather-div-head">
                        <h1>Weather in <%= name%></h1>
                        <div class="country-div">
                            <h4 class="country"><%= country%></h4>
                        </div>
                    </div>
            
                    <div class="image-and-desc-div">
                        <div class="img-div">
                            <img src="https://openweathermap.org/img/wn/<%= icon%>.png" width="" alt="" >
                        </div>
                        <i class="desc"><%= description%></i>
                    </div>
                    <!-- Change Temperature from Kelvin to Celsius -->
                    <%
                        temp -= 273.15;
                        temp = Math.round(temp * 100)/ 100
            
                        temp_min -= 273.15;
                        temp_min = Math.round(temp_min * 100)/ 100
            
                        temp_max -= 273.15;
                        temp_max = Math.round(temp_max * 100)/ 100
                    %>
                    <div class="temp-div">
                        <h1 class="temp"><%= temp%>°C</h1>
                    </div>
            
                    <div class="weather-atrib">
                        <div class="weather-atrib-each">
                            <h3>Min temp: </h3>
                            <p><%= temp_min %>°C</p>
                        </div>
                        <div class="weather-atrib-each">
                            <h3>Max temp: </h3>
                            <p><%= temp_max %>°C</p>
                        </div>
                        <div class="weather-atrib-each">
                            <h3>Pressure: </h3>
                            <p><%= pressure %> hPA</p>
                        </div>
                        <div class="weather-atrib-each">
                            <h3>Humidity: </h3>
                            <p><%= humidity %>%</p>
                        </div>
                        <div class="weather-atrib-each">
                            <h3>Wind speed: </h3>
                            <p><%= speed %> km/h</p>
                        </div>
                    </div>
                </div>
            </div>    

        <%} else {%>
            <div class="weather-div-div">
                <div class="weather-div">
                    <div class="weather-div-head">
                        <h1>City Not Found!!!</h1>
                    </div>
                </div>
            </div>    
        <%}%>
    <%} else {%>
        <div class="weather-div-div">
            <div class="weather-div">
                <div class="weather-div-head">
                    <h1><%= pageNotFound %></h1>
                </div>
            </div>
        </div>    
    <%} %>
    
    <script>
        function validateForm() {
            var cityInput = document.querySelector('.textInput');
            if (cityInput.value.trim() === '') {
                alert('Please enter a city name');
                return false;
            }
            return true;
        }
    </script>
    
</body>
</html>